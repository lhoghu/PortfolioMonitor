<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/portfolio"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/portfolio_symbol"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#ff000000">
    </TextView>
    <TextView
        android:id="@+id/portfolio_name"
        android:layout_width="0dip"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#ff75797b">
    </TextView>
    <TextView
        android:id="@+id/portfolio_currency"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#ff75797b">
    </TextView>
    <TextView
        android:id="@+id/portfolio_position"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#ff000000">
    </TextView>
    <TextView
        android:id="@+id/portfolio_boughtat"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#ff000000">
    </TextView>
    <TextView
        android:id="@+id/portfolio_price"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#ff39df00">
    </TextView>
    <TextView
        android:id="@+id/portfolio_change"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#ff39df00">
    </TextView>
    <TextView
        android:id="@+id/portfolio_pctchange"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#ff39df00">
    </TextView>
    <TextView
        android:id="@+id/portfolio_volume"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_margin="5dip"
        android:textColor="#ff000000">
    </TextView>
</LinearLayout>